<?php

declare(strict_types=1);

$label = $label ?? '';
$href = $href ?? '';
$variant = $variant ?? 'solid';
$classes = 'k-button' . ($variant === 'ghost' ? ' k-button--ghost' : '');
?>
<?php if ($href): ?>
  <a class="<?= htmlspecialchars($classes, ENT_QUOTES, 'UTF-8') ?>" href="<?= htmlspecialchars($href, ENT_QUOTES, 'UTF-8') ?>"><?= $label ?></a>
<?php else: ?>
  <button class="<?= htmlspecialchars($classes, ENT_QUOTES, 'UTF-8') ?>" type="button"><?= $label ?></button>
<?php endif; ?>
